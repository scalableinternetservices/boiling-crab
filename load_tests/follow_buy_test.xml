<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-33-219-64.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="10" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="10" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="10" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="5" duration="10" unit="second">
      <users arrivalrate="12" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="6" duration="10" unit="second">
      <users arrivalrate="15" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- Sign up a random user-->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="rand_val" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1" end="100">
        <var name="rand_post_id" />
      </setdynvars>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents="utf8=%E2%9C%93&amp;user%5Bfirst_name%5D=r_%%_rand_val%%&amp;user%5Blast_name%5D=r&amp;user%5Bemail%5D=r_%%_rand_val%%%40gmail.com&amp;user%5Bpassword%5D=r&amp;user%5Bpassword_confirmation%5D=r&amp;commit=Sign+up">
        </http>
      </request>

      <request>
        <dyn_variable name="following_path"
     		xpath="//div[@class='dashboardProfileCard-stats']/ul/li[2]/a/@href"/>
        <http url='/' method='GET' version='1.0' />
      </request>

      <request subst="true">
        <http url='%%_following_path%%' method='GET' version='1.0' />
      </request>

      <request>
        <http
          url='/friendships'
          version='1.1'
          method='POST'
          contents="utf8=%E2%9C%93&amp;friend_name=Test+Test&amp;commit=add">
      	</http>
      </request>
      
      <request subst="true">
        <http url='%%_following_path%%' method='GET' version='1.0' />
      </request>
   
      <request subst="true">
	<http url="/users/5" method='GET' version='1.0'/>
      </request>

      <request subst="true">
        <http url='/posts/%%_rand_post_id%%/orders' version='1.1' method='POST' contents=''></http>
      </request>
      
      <request subst="true">
        <http url='/posts/%%_rand_post_id%%/orders/1' version='1.1' method='DELETE' contents=''></http>
      </request>

      <request>
        <http url='/friendships/5' version='1.1' method='POST' contents="_method=delete"></http>
      </request>

      <request subst="true">
        <http url='%%_following_path%%' method='GET' version='1.0' />
      </request>

    </session>
  </sessions>
</tsung>
