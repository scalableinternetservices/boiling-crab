
<p>
  <strong>Title:</strong>
  <%= @submission.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= @submission.url %>
</p>

<p>
  <strong>Community:</strong>
  <%= @submission.community.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @submission.image.url %>
</p>

<div>
  <%= link_to("Comment on this submission", {controller: "comments", action: "new", comment: {submission_id: @submission.id}}, {class: 'btn btn-primary'} ) %>
</div>

<% if @submission.root_comments.size > 0 %>
  <div>
    Comments:<br>
    <%= render @submission.root_comments %>
  </div>
<% end %>

