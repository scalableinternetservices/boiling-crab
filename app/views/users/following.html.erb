<div class="profile-content" >
    <div class="profileCanopy">
        <div class="profileCanopy-header">
            <div class="profile-container">
                <div class="profile-avatar">
                    <img class="profile-avatar-img" ng-src="{{user.user_pic}}">
                </div>
            </div>
        </div>
        <div class="profileCanopy-navBar">
            <div class="profile-container">
                <div class="profileCanopy-navBar-nav">
                   <ul class="profileNav-list">
                        <li class="profileNav-item">
                            <%= link_to user_path(@user), :class => "profileNav-link" do %>
                                <div class="profileNav-label">posts</div>
                                <div class="profileNav-value">x</div>
                            <% end %>
                        </li>
                        <li class="profileNav-item is-active" >
                            <%= link_to user_following_path(id: @user.id), :class => "profileNav-link"  do %>
                                <div class="profileNav-label">following</div>
                                <div class="profileNav-value">x</div>
                            <% end %>
                        </li>
                        <li class="profileNav-item">
                            <%= link_to user_follower_path(id: @user.id), :class => "profileNav-link" do %>
                                <div class="profileNav-label">followers</div>
                                <div class="profileNav-value">xx</div>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-body">
        <div class="profile-container clearFix" style="margin-top: 10px">
            <div class="dashboard dashboard-left">
                <div class="profileHeaderCard">
                    <h1><a class="profileHeaderCard-name" href="#"><%= @user.first_name %> <%= @user.last_name %></a></h1>
                    <p class="profileHeaderCard-bio"> some thing
                    </p>
                    <div class="profileHeaderCard-location">
                    <span class="glyphicon glyphicon-globe"></span>
                    <span>address</span>
                    </div>
                    <div class="profileHeaderCard-joinDate">
                    <span class="glyphicon glyphicon-time"></span>
                    <span>Joined date</span>
                    </div>
                </div>
                <div class="dashboardCategoryCard module">
                  <div class="dashboardCategoryCard-header">
                    <h3 class="card-header"><span>Popular goods</span></h3>
                    <span class="card-middot">&#8729;</span>
                    <a role="button" class="card-link">Change</a>
                  </div>

                  <div class="dashboardCategoryCard-items">
                    <ul class="dashboardCategoryCard-itemsList">
                      <li class="dashboardCategoryCard-item">
                        <a href="#">
                          <p class="goods-name">Car</p>
                          <p class="goods-number">100 posts in this category</p>
                        </a>
                      </li>

                      <li class="dashboardCategoryCard-item">
                        <a href="#">
                          <p class="goods-name">Desk</p>
                          <p class="goods-number">130 posts in this category</p>
                        </a>
                      </li>

                      <li class="dashboardCategoryCard-item">
                        <a href="#">
                          <p class="goods-name">book</p>
                          <p class="goods-number">130 posts in this category</p>
                        </a>
                      </li>

                    </ul>
                  </div>
                </div>
            </div>

          <!--   <div ui-view>
            </div>

 -->
            <div class="content-middle">
              <div class="stream-container">
                <ul class="friends-list">
                 <% if current_user.id == @user .id %>
                      <li class="add-friends-card">
                    <%= form_tag(friendships_path, method: "post") do %>
                        <%= label_tag(:friend_name, "Enter new friend's name", class: "add-friend-label") %>
                        <%= text_field_tag(:friend_name, nil, class: "add-friend-field") %>
                        <%= submit_tag "add", class: "btn btn-default friends-add-btn" %>
                    <% end %>
                  </li>
                  <% end %>
                  <% @following.each do |following| %>
                  <li class="friends-card">
                    <div class="friends-card-inner">
                      <%= link_to user_path(following), :class => 'friends-card-link' do%>
                        <img src="" class="friends-card-avatar">
                        <div class="friends-card-name"><%= following.first_name%> <%= following.last_name %></div>
                      <% end %>
                      <!-- <div class="friends-card-description">Followed by {{ following.followBy}} people</div> -->
                      <div>
                        <%=link_to friendship_path(id: following.id), method: :delete, data: {confirm: 'Are you sure?'} do %>
                          <button type="button" class="btn btn-default friends-follow-btn">Unfollow</button>
                        <% end %>
                      </div>
                  </div>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>


            <div class="dashboard dashboard-right">
                <div class="dashboardRecCard module">
                  <div class="dashboardRecCard-header">
                    <h3 class="card-header"><span>Popular sellers</span></h3>
                    <span class="card-middot">&#8729;</span>
                    <a role="button" class="card-link">Refresh</a>
                    <span class="card-middot">&#8729;</span>
                    <a role="button" class="card-link">View all</a>
                  </div>

                  <div class="dashboardRecCard-items">
                    <ul class="dashboardRecCard-itemsList">
                      <li class="dashboardRecCard-item">
                        <div class="rec-user-dismiss">x</div>
                        <div class="dashboardRecCard-item-inner">
                          <a href="#" class="dashboardRecCard-item-link">
                            <img src="img/user-pic1.jpg" class="rec-user-avatar">
                            <div class="rec-user-name">Ziqiang Shi</div>
                          </a>
                          <div class="rec-user-description">Followed by 25 people</div>
                          <div class="">
                            <button type="button" class="btn btn-default rec-follow-btn">Follow</button>
                          </div>
                        </div>
                      </li>

                      <li class="dashboardRecCard-item">
                        <div class="rec-user-dismiss">x</div>
                        <div class="dashboardRecCard-item-inner">
                          <a href="#" class="dashboardRecCard-item-link">
                            <img src="img/user-pic1.jpg" class="rec-user-avatar">
                            <div class="rec-user-name">Ziqiang Shi</div>
                          </a>
                          <div class="rec-user-description">Followed by 25 people</div>
                          <div class="">
                            <button type="button" class="btn btn-default rec-follow-btn">Follow</button>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>

                <div class="dashboardRecCard module">
                  <div class="dashboardRecCard-header">
                    <h3 class="card-header"><span>People you may know</span></h3>
                    <span class="card-middot">&#8729;</span>
                    <a role="button" class="card-link">Refresh</a>
                    <span class="card-middot">&#8729;</span>
                    <a role="button" class="card-link">View all</a>
                  </div>

                  <div class="dashboardRecCard-items">
                    <ul class="dashboardRecCard-itemsList">
                      <li class="dashboardRecCard-item">
                        <div class="rec-user-dismiss">x</div>
                        <div class="dashboardRecCard-item-inner">
                          <a href="#" class="dashboardRecCard-item-link">
                            <img src="img/user-pic1.jpg" class="rec-user-avatar">
                            <div class="rec-user-name">Ziqiang Shi</div>
                          </a>
                          <div class="rec-user-description">25 mutual people</div>
                          <div class="">
                            <button type="button" class="btn btn-default rec-follow-btn">Follow</button>
                          </div>
                        </div>
                      </li>

                      <li class="dashboardRecCard-item">
                        <div class="rec-user-dismiss">x</div>
                        <div class="dashboardRecCard-item-inner">
                          <a href="#" class="dashboardRecCard-item-link">
                            <img src="img/user-pic1.jpg" class="rec-user-avatar">
                            <div class="rec-user-name">Ziqiang Shi</div>
                          </a>
                          <div class="rec-user-description">10 mutual friends</div>
                          <div class="">
                            <button type="button" class="btn btn-default rec-follow-btn">Follow</button>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                </div>
            </div>

        </div>
    </div>
</div>