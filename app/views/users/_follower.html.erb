<!-- Follower display -->
<div class="content-middle">
  <div class="stream-container">
    <ul class="friends-list">
      <% followers.each do |follower| %>
          <li class="friends-card">
            <div class="friends-card-inner">
              <%= link_to user_path(follower), :class => 'friends-card-link' do%>
                <%= image_tag(follower.image.url, class: "friends-card-avatar") %>
                <div class="friends-card-name"><%= follower.first_name%> <%= follower.last_name %></div>
              <% end %>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
</div>
