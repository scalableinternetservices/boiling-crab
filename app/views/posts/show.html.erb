<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>
<p>
  <strong>Image:</strong>
  <%= image_tag(@post.image.url, size: "320x200") %>
</p>
<%= link_to "edit", edit_post_path(@post) %>
<%= link_to "delete", post_path(@post), method: :delete,
                      data: {confirm: 'Are you sure?'} %>
<br>
<%= link_to 'Back', posts_path %>