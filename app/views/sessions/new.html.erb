<div class="login">
    <div class="container">
        <div class="form">
            <h1>Log in</h1>
            <%= form_for(:session, url: login_path) do |f| %> 

              <% if @login_errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@login_errors.count, "error") %> prohibited this user from being saved:</h2>

                  <ul>
                    <% @login_errors.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              
              <%= f.email_field :email, :placeholder => "Email" %> 
              <%= f.password_field :password, :placeholder => "Password" %> 
              <%= f.submit "Log in", class: "btn-submit" %>
            <% end %>
        </div>
    </div>
</div>